[alias]
	s      = status
	fp     = push origin HEAD --force-with-lease
	ci     = commit --verbose
	ca     = commit --amend
	can    = commit --amend --no-edit
	co     = checkout
	com    = checkout master
	cob    = checkout -b
	di     = diff
	dc     = diff --cached
	ds     = diff --staged
	l      = log
	rim    = rebase -i origin/master
	sc     = switch -c
	recent = branch --sort=-committerdate --format="%(committerdate:relative)%09%(refname:short)"
[rebase]
	autosquash = true
[core]
	excludesfile = /Users/chris/.gitignore
[fetch]
	prune = true
[init]
	defaultBranch = main

